import '../../styles/ArticleSection.css'

export const metadata = {
    titulo: "Como usar o E-mail para Engajar Seu Público",
    descricao: "O e-mail marketing continua sendo uma das estratégias mais eficazes para engajar o público...",
    foto: "https://cdn.pixabay.com/photo/2016/12/13/07/25/email-1903444_1280.jpg",
